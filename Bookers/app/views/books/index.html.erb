
	<h1>Books</h1>
	<table>
		<tr>
				<th>Title</th>
				<th>Body</th>
				<th></th>
				<th></th>
				<th></th>
		</tr>

		<% @books.each do |book| %>

		<tr>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
				<td><%= link_to 'Show', book_path(book.id) %></td>
				<td><%= link_to 'Edit', edit_book_path(book.id) %></td>
				<td><%= link_to 'Destroy', book_path(book.id), method: :delete %></td>
		</tr>


		<% end %>

	</table>

	<h3>New book</h3>

	<%= form_for(@book) do |f| %>
	<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>Body</h4>
	<%= f.text_area :body %>
	<br><%= f.submit 'Create Book' %></br>
	<% end %>



